<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comment_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#322277"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lista_userów_button"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"

                android:text="Lista użytkowników"
                android:textColor="#FFFFFF"
                app:backgroundTint="#2E10AE" />

            <Button
                android:id="@+id/back2profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"

                android:text="wróć do profilu"
                android:textColor="#FFFFFF"
                app:backgroundTint="#2E10AE" />
        </LinearLayout>

        <TextView
            android:id="@+id/PostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#322277"
            android:text="postTitle"
            android:textColor="#FFFFFF"
            android:textSize="36dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comment_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>